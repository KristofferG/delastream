<div class="container-lg">
  <div class="m-5">
    <h1>TV-paket</h1>

    <%= link_to 'Addera paket', new_package_path, :type => 'button', :class => 'btn btn-primary btn-sm' %> <br><br>

    <table class="table">
      <tr>
        <th>Leverantör</th>
        <th>Paket</th>
        <th>Innehåll</th>
        <th>Pris</th>
        <th>logo</th>
        <th>sort order</th>
        <th colspan="3"></th>
      </tr>

      <% @packages.each do |package| %>
        <tr>
          <td><%= package.provider %></td>
          <td><%= package.name %></td>
          <td><%= package.description %></td>
          <td><%= package.price %></td>
          <td><%= package.logo %></td>
          <td><%= package.sort%></td>
          <td><%= link_to 'Show', package_path(package), :type => 'button', :class => 'btn btn-outline-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_package_path(package), :type => 'button', :class => 'btn btn-outline-warning btn-sm' %></td>
          <td><%= link_to 'Destroy', package_path(package), :type => 'button', :class => 'btn btn-outline-danger btn-sm',
            method: :delete,
            data: { confirm: 'Är du säker?'} %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
